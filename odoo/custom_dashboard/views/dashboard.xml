<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista List para Dashboard Module -->
    <record id="view_dashboard_module_tree" model="ir.ui.view">
        <field name="name">dashboard.module.tree</field>
        <field name="model">dashboard.module</field>
        <field name="arch" type="xml">
            <list string="Módulos del Dashboard">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="technical_name"/>
                <field name="icon"/>
                <field name="category"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vista Form para Dashboard Module -->
    <record id="view_dashboard_module_form" model="ir.ui.view">
        <field name="name">dashboard.module.form</field>
        <field name="model">dashboard.module</field>
        <field name="arch" type="xml">
            <form string="Módulo del Dashboard">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger"
                            invisible="[['active', '=', True]]"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del módulo"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="technical_name"/>
                            <field name="icon" placeholder="fa-cube"/>
                            <field name="color" placeholder="bg-blue-500"/>
                            <field name="category"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="menu_id"/>
                            <field name="action_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Descripción del módulo..."/>
                    </group>
                    <group>
                        <field name="group_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search para Dashboard Module -->
    <record id="view_dashboard_module_search" model="ir.ui.view">
        <field name="name">dashboard.module.search</field>
        <field name="model">dashboard.module</field>
        <field name="arch" type="xml">
            <search string="Buscar Módulos">
                <field name="name"/>
                <field name="technical_name"/>
                <field name="category"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Ventas" name="ventas" domain="[('category', '=', 'ventas')]"/>
                <filter string="Contabilidad" name="contabilidad" domain="[('category', '=', 'contabilidad')]"/>
                <filter string="Inventario" name="inventario" domain="[('category', '=', 'inventario')]"/>
                <filter string="RRHH" name="rrhh" domain="[('category', '=', 'rrhh')]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Categoría" name="group_category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para Dashboard Module -->
    <record id="action_dashboard_module" model="ir.actions.act_window">
        <field name="name">Configurar Módulos</field>
        <field name="res_model">dashboard.module</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configura los módulos que aparecerán en el Dashboard
            </p>
            <p>
                Aquí puedes agregar y configurar los módulos que se mostrarán 
                en el panel principal personalizado.
            </p>
        </field>
    </record>

    <!-- Acción Cliente para el Dashboard Principal -->
    <record id="action_custom_dashboard" model="ir.actions.client">
        <field name="name">Panel Principal</field>
        <field name="tag">custom_dashboard</field>
    </record>
</odoo>
