<odoo>
    <!-- Acción de Menú (DEBE IR PRIMERO) -->
    <record id="action_detalleventas" model="ir.actions.act_window">
        <field name="name">DetalleVentas</field>
        <field name="res_model">detalleventas.detalleventa</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea tu primer detalle de venta</p>
        </field>
    </record>

    <!-- Vista árbol -->
    <record id="view_detalleventa_list" model="ir.ui.view">
        <field name="name">detalleventa.tree</field>
        <field name="model">detalleventas.detalleventa</field>
        <field name="arch" type="xml">
            <list>
                <field name="producto"/>
                <field name="cantidad"/>
                <field name="precio"/>
                <field name="iva"/>
                <field name="ieps"/>
                <field name="importeb"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_detalleventa_form" model="ir.ui.view">
        <field name="name">detalleventa.form</field>
        <field name="model">detalleventas.detalleventa</field>
        <field name="arch" type="xml">
            <form autosave="False">
                <sheet>
                    <group>
                    <field name="producto"/>
                    <field name="cantidad"/>
                    <field name="precio"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_root" name="Detalle de Ventas" sequence="10"/>
    <menuitem id="menu_action" name="Catálogo de Detalle de Ventas" parent="menu_root" action="action_detalleventas"/>
</odoo>
