<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- creditos/views/entrys.xml -->
    <!-- Vista formulario para el wizard -->
    <record id="view_credito_entrys" model="ir.ui.view">
        <field name="name">creditos.entrys.list</field>
        <field name="model">creditos.entry</field>
        <field name="arch" type="xml">
            <list create="false" edit="false">
                <field name="fecha"/>
                <field name="tipo" widget="badge" decoration-success="tipo == 'confirmed'" decoration-danger="tipo == 'discard'"
                    decoration-warning="tipo == 'blocked'" decoration-muted="tipo == 'tech' or tipo == 'draft'" decoration-info="tipo == 'check'"/>
                <field name="msg"/>
                <field name="usuario"/>
            </list>
        </field>
    </record>

    <record id="view_credito_entrys_form" model="ir.ui.view">
        <field name="name">creditos.entrys.form</field>
        <field name="model">creditos.entry</field>
        <field name="arch" type="xml">
            <form autosave= "false">
                <group>
                    <field name="tipo" widget="badge" decoration-success="tipo == 'confirmed'" decoration-danger="tipo == 'discard'"
                    decoration-warning="tipo == 'blocked'" decoration-muted="tipo == 'tech' or tipo == 'draft'" decoration-info="tipo == 'check'"/>
                    <field name="msg"/>
                </group>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir el wizard -->
    <record id="action_transient_edocta" model="ir.actions.act_window">
        <field name="name">Registro de Sucesos</field>
        <field name="res_model">creditos.entry</field>
        <field name="view_mode">list</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_credito_entrys"/>
    </record>
</odoo>