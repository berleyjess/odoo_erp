<odoo>
    <!-- Acción de Menú (DEBE IR PRIMERO) -->
    <record id="action_empresas" model="ir.actions.act_window">
        <field name="name">empresas</field>
        <field name="res_model">empresa</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea tu primer empresa</p>
        </field>
    </record>

    <!-- Vista árbol -->
    <record id="view_empresa_list" model="ir.ui.view">
        <field name="name">empresa.tree</field>
        <field name="model">empresa</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="rfc"/>
                <field name="telefono"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_empresa_form" model="ir.ui.view">
        <field name="name">empresa.form</field>
        <field name="model">empresa</field>
        <field name="arch" type="xml">
            <form autosave="False">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="telefono"/>
                        <field name="razonsocial"/>
                        <field name="cp"/>
                        <field name="rfc"/>
                        <field name="calle"/>
                        <field name="numero"/>
                    </group>
                    <notebook>
                        <page string="Sucursales">
                            <field name="sucursales">
                                <list editable="bottom">
                                    <field name="nombre"/>
                                    <field name ="telefono"/>
                                    <field name="codigo"/>
                                    <field name="calle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <notebook>
                        <page string="Bodegas">
                            <field name="bodegas">
                                <list editable="bottom">
                                    <field name="nombre"/>
                                    <field name="codigo"/>
                                    <field name="sucursal"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_root" name="Empresas" sequence="10"/>
    <menuitem id="menu_action" name="Catálogo de empresas" parent="menu_root" action="action_empresas"/>
</odoo>
