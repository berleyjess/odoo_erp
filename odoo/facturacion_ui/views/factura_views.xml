<!-- views/factura_views.xml -->
<odoo>
  <record id="view_factura_tree" model="ir.ui.view">
    <field name="name">facturas.factura.tree</field>
    <field name="model">facturas.factura</field>
    <field name="arch" type="xml">
      <list>
        <field name="empresa_id"/>
        <field name="sucursal_id"/>
        <field name="cliente_id"/>
        <field name="tipo"/>
        <field name="metodo"/>
        <field name="forma"/>
        <field name="importe_total"/>
        <field name="saldo"/>
        <field name="origin_factura_id" invisible="not (tipo == 'E' or tipo == 'P')"/>
        <field name="state" widget="badge" decoration-success="state == 'stamped'" decoration-warning="state == 'ready'" decoration-info="state == 'draft'"/>
        <field name="uuid"/>
        <button name="action_fetch_xml_from_sw" type="object" icon="fa-download" string="Descargar XML" invisible="not uuid"/>
      </list>
    </field>
  </record>

<!-- views/factura_views.xml: en <group> principal -->


<record id="view_factura_form" model="ir.ui.view">
    <field name="name">facturas.factura.form</field>
    <field name="model">facturas.factura</field>
    <field name="arch" type="xml">
      <form string="Captura de Factura">
        <header>
          <button name="action_build_and_stamp" type="object" string="Timbrar" 
                  class="btn-primary" 
                  invisible="state != 'draft'"/>
          <!--button name="action_download_xml" type="object" string="Descargar XML" 
                  class="btn-info"
                  invisible="not uuid"/-->
          <button name="action_fetch_xml_from_sw" type="object" string="Recuperar XML de SW" 
                  class="btn-warning"
                  invisible="not uuid"/>
          <button name="action_prepare_credit_note" type="object" string="Nota de Crédito"
                  class="btn-secondary"
                  invisible="not (tipo == 'I' and state == 'stamped')"/>
          <button name="action_prepare_payment"
                  type="object"
                  string="Registrar Pago (Complemento)"
                  class="oe_highlight"
                  invisible="not (tipo == 'I' and state == 'stamped' and saldo &gt; 0.0)"/>

          <button name="action_close_form" type="object" string="Cerrar" class="btn-secondary"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,ready,stamped,canceled"/>
        </header>

        <sheet>
          <div class="oe_button_box" name="button_box">
            <button name="action_open_attachments" type="object" class="oe_stat_button" icon="fa-paperclip">
              <field name="attachment_count" widget="statinfo" string="Adjuntos"/>
            </button>
            <!--button name="action_download_xml" type="object" class="oe_stat_button" icon="fa-file-code-o" invisible="not uuid">
              <field name="uuid" widget="statinfo" string="XML"/>
            </button-->
          </div>
          
          <widget name="web_ribbon" title="Timbrado" invisible="state != 'stamped'" bg_color="bg-success"/>
          <widget name="web_ribbon" title="Cancelado" invisible="state != 'canceled'" bg_color="bg-danger"/>
          
          <h1>
            <field name="id" readonly="1" invisible="not id"/>
          </h1>
          
                <button name="%(action_wiz_add_sales)d" type="action" string="Agregar Ventas completas"
                        invisible="state != 'draft' or tipo == 'E' or tipo == 'P'"
                        context="{
                          'default_factura_id': id,
                          'empresa_id':  empresa_id,
                          'sucursal_id': sucursal_id,
                          'cliente_id':  cliente_id
                        }"
                        class="btn-secondary"/>

                <button name="%(action_wiz_add_lines)d" type="action" string="Agregar Transacciones"
                        invisible="state != 'draft' or tipo == 'E' or tipo == 'P'"
                        context="{
                          'default_factura_id': id,
                          'empresa_id':  empresa_id,
                          'sucursal_id': sucursal_id,
                          'cliente_id':  cliente_id
                        }"
                        class="btn-secondary"/>

                <button name="%(action_wiz_add_charges)d" type="action" string="Agregar Cargos"
                        invisible="state != 'draft' or tipo == 'E' or tipo == 'P'"
                        context="{
                          'default_factura_id': id,
                          'empresa_id':  empresa_id,
                          'sucursal_id': sucursal_id,
                          'cliente_id':  cliente_id
                        }"
                        class="btn-secondary"/>
                
                <button name="action_placeholder_interest" type="object" string="Agregar Intereses" 
                        class="btn-secondary"
                        invisible="state != 'draft' or tipo == 'E' or tipo == 'P'"/>
          
          <group>
            <group>
              <field name="empresa_id" required="1" readonly="state != 'draft'" options="{'no_open': True}"/>
              
              <field name="sucursal_id" required="1" readonly="state != 'draft'" options="{'no_open': True}"/>
              <field name="cliente_id" readonly="state != 'draft'" options="{'no_open': True}"/>
              <field name="tipo" readonly="state != 'draft'"/>
              <field name="egreso_tipo" invisible="tipo != 'E'"/>
              <field name="origin_factura_id" invisible="not (tipo == 'E' or tipo == 'P')"/>
              <field name="origin_move_id" invisible="tipo != 'E'" readonly="1"/>
            </group>
            <group>
              <field name="uso_cfdi" invisible="tipo == 'P'" readonly="state != 'draft'"/>
              <field name="metodo" invisible="tipo == 'P'" readonly="state != 'draft'"/>
              <field name="forma" invisible="tipo == 'P'" readonly="state != 'draft'"/>
              <field name="moneda" readonly="state != 'draft'"/>
              <field name="fecha" readonly="state != 'draft'"/>
            </group>
          </group>
          
          <group>
            <group>
              <field name="serie" readonly="state != 'draft'"/>
              <field name="folio" readonly="state != 'draft'"/>
            </group>
            <group>
              <field name="uuid" readonly="1"/>
              <field name="move_id" readonly="1"/>
              <field name="importe_total" readonly="1"/>
              <field name="saldo" readonly="1"/>
              <field name="pago_importe" invisible="tipo != 'P'"/>
            </group>
          </group>

          <!-- ===== GRUPO SOLO PARA COMPLEMENTO DE PAGO (tipo P) ===== -->
          <group string="Pago" invisible="tipo != 'P'">
            <group>
              <!-- Factura a la que se aplica el pago -->
              <field name="origin_factura_id" options="{'no_open': True}"/>
              <!-- Importe del pago -->
              <field name="pago_importe" required="1"/>
            </group>
            <group>
              <!-- Forma del nodo Pago (obligatoria) -->
              <field name="forma" required="1" readonly="state != 'draft'"/>
              <!-- Fecha del pago -->
              <field name="fecha" readonly="state != 'draft'"/>
            </group>
          </group>


          <notebook>
            <page string="Productos/Servicios" invisible="tipo == 'P'">
              <!-- ===== Ingresos (tipo I): tu comportamiento actual ===== -->
              <field name="line_ids" readonly="state != 'draft'" invisible="tipo != 'I'">
                <list editable="bottom" create="state == 'draft'" delete="state == 'draft'">
                  <field name="line_type" required="1" readonly="source_model"/>
                  <!-- <field name="source_model" invisible="1"/>
                  <field name="source_id" invisible="1"/> -->
                  <field name="empresa_id" readonly="1"/>
                  <field name="cliente_id" readonly="1"/>
                  <field name="sale_id" readonly="1" invisible="parent.tipo == 'E'"/>
                  <field name="transaccion_id" readonly="1" invisible="parent.tipo == 'E'"/>
                  <field name="producto_id" readonly="source_model"/>
                  <field name="descripcion" readonly="source_model"/>
                  <field name="cantidad" readonly="source_model"/>
                  <field name="precio" readonly="source_model"/>
                  <field name="iva_ratio" readonly="source_model"/>
                  <field name="ieps_ratio" readonly="source_model"/>
                  <field name="subtotal" readonly="1" sum="Total"/>
                  <field name="iva_amount" readonly="1" sum="IVA"/>
                  <field name="ieps_amount" readonly="1" sum="IEPS"/>
                  <field name="total" readonly="1" sum="Total"/>
                  <!-- <field name="qty_to_invoice" invisible="parent.tipo == 'E' or (not transaccion_id)"/>
                  <field name="qty_invoiced" invisible="parent.tipo == 'E' or (not transaccion_id)" readonly="1"/> -->
                </list>
              </field>

              <!-- ===== Egresos: Nota de crédito (E/nc) =====
                   Solo permitimos editar importe/impuestos; cantidad queda bloqueada. -->
              <field name="line_ids" readonly="state != 'draft'" invisible="not (tipo == 'E' and egreso_tipo == 'nc')" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}">
                <list editable="bottom" create="state == 'draft'" delete="state == 'draft'">
                  <field name="line_type" required="1" readonly="1"/>
                  <field name="empresa_id" readonly="1"/>
                  <field name="cliente_id" readonly="1"/>
                  <field name="sale_id" readonly="1" invisible="parent.tipo == 'E'"/>
                  <field name="transaccion_id" readonly="1" invisible="parent.tipo == 'E'"/>
                  <field name="producto_id" readonly="1"/>
                  <field name="descripcion" readonly="1"/>
                  <!-- cantidad bloqueada en NC -->
                  <field name="cantidad" readonly="1"/>
                  <!-- permitir ajustar importes/impuestos si se acredita por valor -->
                  <field name="precio"/>
                  <field name="iva_ratio"/>
                  <field name="ieps_ratio"/>
                  <field name="subtotal" readonly="1" sum="Total"/>
                  <field name="iva_amount" readonly="1" sum="IVA"/>
                  <field name="ieps_amount" readonly="1" sum="IEPS"/>
                  <field name="total" readonly="1" sum="Total"/>
                </list>
              </field>                
              <!-- ===== Egresos: Devolución (E/dev) =====
                   Solo permitimos editar cantidad; precio/impuestos/producto/desc bloqueados. -->
              <field name="line_ids" readonly="state != 'draft'" invisible="not (tipo == 'E' and egreso_tipo == 'dev')" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}">
                <list editable="bottom" create="state == 'draft'" delete="state == 'draft'">
                  <field name="line_type" required="1" readonly="1"/>
                  <field name="empresa_id" readonly="1"/>
                  <field name="cliente_id" readonly="1"/>
                  <field name="sale_id" readonly="1" invisible="parent.tipo == 'E'"/>
                  <field name="transaccion_id" readonly="1" invisible="parent.tipo == 'E'"/>
                  <field name="producto_id" readonly="1"/>
                  <field name="descripcion" readonly="1"/>
                  <!-- cantidad editable para devolución parcial -->
                  <field name="cantidad"/>
                  <!-- bloquear valores unitarios e impuestos -->
                  <field name="precio" readonly="1"/>
                  <field name="iva_ratio" readonly="1"/>
                  <field name="ieps_ratio" readonly="1"/>
                  <field name="subtotal" readonly="1" sum="Total"/>
                  <field name="iva_amount" readonly="1" sum="IVA"/>
                  <field name="ieps_amount" readonly="1" sum="IEPS"/>
                  <field name="total" readonly="1" sum="Total"/>
                </list>
              </field>

            </page>

            
            <page string="Ventas seleccionadas" invisible="tipo != 'I'">
              <field name="venta_ids" widget="many2many_tags" readonly="state != 'draft'"/>
            </page>

            <page string="Adjuntos">
              <group>
                <button name="action_open_attachments" type="object" string="Ver todos los adjuntos" class="btn-primary"/>
                <!--button name="action_download_xml" type="object" string="Descargar XML CFDI" class="btn-info" invisible="not uuid"/-->
                <button name="action_fetch_xml_from_sw" type="object" string="Recuperar XML desde PAC" class="btn-warning" invisible="not uuid"/>
              </group>
              <group>
                <field name="attachment_count" readonly="1"/>
              </group>
            </page>
            
            <page string="Información técnica">
              <group>
                <group string="CFDI">
                  <field name="uuid"/>
                  <field name="state"/>
                  <field name="move_id"/>
                </group>
                <group string="Compañías">
                  <field name="empresa_id"/>
                  
                </group>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_facturas_ui" model="ir.actions.act_window">
    <field name="name">Interfaz de Facturas</field>
    <field name="res_model">facturas.factura</field>
    <field name="view_mode">list,form</field>
    <field name="context">{'default_tipo': 'I'}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Crea tu primera factura
      </p>
      <p>
        Administra facturas, notas de crédito y complementos de pago.
      </p>
    </field>
  </record>
  
  
</odoo>