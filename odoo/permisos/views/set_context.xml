<!-- permisos/views/set_context.xml -->
<odoo>
  <!-- Acción del wizard -->
  <record id="action_set_context_ciclos" model="ir.actions.act_window">
    <field name="name">Cambiar contexto (Ciclos)</field>
    <field name="res_model">permisos.set.context.wiz</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <!-- usamos modulo_code para no depender de un XMLID de permisos.modulo -->
    <field name="context">{'default_modulo_code': 'ciclos'}</field>
  </record>

  <!-- Menú dentro del área Ciclos (ajusta el parent a tu menú raíz de Ciclos) -->
  <menuitem id="menu_ciclos_set_context"
            name="Cambiar contexto"
            parent="permisos.menu_permisos_root"
            action="action_set_context_ciclos"
            sequence="99"/>
</odoo>
