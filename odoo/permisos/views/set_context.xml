<!-- permisos/views/set_context.xml -->
<odoo>
    <record id="view_set_context_wiz_form" model="ir.ui.view">
        <field name="name">permisos.set.context.wiz.form</field>
        <field name="model">permisos.set.context.wiz</field>
        <field name="arch" type="xml">
            <form string="Definir contexto del mÃ³dulo">
                <group>
                    <field name="modulo_id" readonly="1"/>
                    <field name="empresa_id"/>

                    <field name="sucursal_id"
                            domain="[('empresa', '=', empresa_id)]"
                            invisible="[('empresa_id','=',False)]"/>
                    
                    <field name="bodega_id"
                            domain="[('empresa_id', '=', empresa_id)]"
                            invisible="[('empresa_id','=',False)]"/>


                </group>
                <footer>
                    <button name="action_apply"
                            string="Aplicar contexto"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
