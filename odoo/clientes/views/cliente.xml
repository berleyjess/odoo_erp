<odoo>
    


    <!-- Vista árbol -->
    <record id="view_cliente_list" model="ir.ui.view">
        <field name="name">cliente.tree</field>
        <field name="model">clientes.cliente</field>
        <field name="arch" type="xml">
            <list>
                <field name="tipo" string="Tipo de Cliente"/>
                <field name="nombre" string="Nombre"/>
                <field name="regimen"/>
                <field name="rfc" string="RFC"/>
                <field name="curp" string="CURP"/>
                <field name="estado_civil" string="Estado Civil"/>
                <field name="codigop" string="Código Postal"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_cliente_form" model="ir.ui.view">
        <field name="name">cliente.form</field>
        <field name="model">clientes.cliente</field>
        <field name="arch" type="xml">
            <form autosave="False">
                <xpath expr="//div[contains(@class, 'o_control_panel_main')]" position="replace"/>
                
                <!-- Elimina componentes específicos por si acaso -->
                <xpath expr="//div[contains(@class, 'o_control_panel_breadcrumbs')]" position="replace"/>
                <xpath expr="//div[contains(@class, 'o_control_panel_actions')]" position="replace"/>
                <xpath expr="//div[contains(@class, 'o_control_panel_navigation')]" position="replace"/>

                <header>
                    <button name="%(action_clientes)d" string="Volver a Lista" type="action" 
                            class="btn btn-secondary" icon="fa-arrow-left"/>
                    <button name="action_save" string="Guardar y Volver" type="object" 
                            class="btn btn-primary" icon="fa-save"/>
                </header>

                <sheet>
                    <group>
                        <group string="Información General">
                            <field name="tipo" widget="radio" options="{'horizontal': true}"/>
                            <field name="nombre"/>
                            <field name="regimen"
                            options="{'no_open': True,'no_create': True}"/>
                            <field name="rfc"/>
                        </group>
                        <group string="Información Personal">
                            <field name="ine"/>
                            <field name="curp"/>
                            <field name="estado_civil"/>
                            <field name="conyugue" 
                                   invisible="estado_civil not in ['casado', 'union_libre']"
                                   required="estado_civil in ['casado', 'union_libre']"
                                   placeholder="Nombre completo del cónyuge"/>
                        </group>
                    </group>
                    
                    <group string="Dirección">
                        <group>
                            <field name="localidad"/>
                            <field name="codigop"/>
                        </group>
                        <group>
                            <field name="colonia"/>
                            <field name="calle"/>
                            <field name="numero"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Contactos">
                            <field name="contacto">
                                <list editable="bottom">
                                    <field name="nombre"/>
                                    <field name="descripcion"/>
                                    <field name="telefono"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <record id="view_cliente_detail" model="ir.ui.view">
        <field name="name">cliente.detail</field>
        <field name="model">clientes.cliente</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0" copy="0">
                <xpath expr="//div[contains(@class, 'o_control_panel_main')]" position="replace"/>
                
                <!-- Elimina componentes específicos por si acaso -->
                <xpath expr="//div[contains(@class, 'o_control_panel_breadcrumbs')]" position="replace"/>
                <xpath expr="//div[contains(@class, 'o_control_panel_actions')]" position="replace"/>
                <xpath expr="//div[contains(@class, 'o_control_panel_navigation')]" position="replace"/>

                <header>
                    <button name="%(action_clientes)d" string="Volver a Lista" type="action" 
                            class="btn btn-secondary" icon="fa-arrow-left"/>
                    <button name="action_save" string="Guardar y Volver" type="object" 
                            class="btn btn-primary" icon="fa-save"/>
                </header>

                <sheet>
                    <group>
                        <group string="Información General">
                            <field name="tipo" widget="radio" options="{'horizontal': true}"/>
                            <field name="nombre"/>
                            <field name="regimen"
                            options="{'no_open': True,'no_create': True}"/>
                            <field name="rfc"/>
                        </group>
                        <group string="Información Personal">
                            <field name="ine"/>
                            <field name="curp"/>
                            <field name="estado_civil"/>
                            <field name="conyugue" 
                                   invisible="estado_civil not in ['casado', 'union_libre']"
                                   required="estado_civil in ['casado', 'union_libre']"
                                   placeholder="Nombre completo del cónyuge"/>
                        </group>
                    </group>
                    
                    <group string="Dirección">
                        <group>
                            <field name="localidad"/>
                            <field name="codigop"/>
                        </group>
                        <group>
                            <field name="colonia"/>
                            <field name="calle"/>
                            <field name="numero"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Contactos">
                            <field name="contacto">
                                <list editable="bottom">
                                    <field name="nombre"/>
                                    <field name="descripcion"/>
                                    <field name="telefono"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de Menú (DEBE IR PRIMERO) -->
    <record id="action_clientes" model="ir.actions.act_window">
    <field name="name">Clientes</field>
    <field name="res_model">clientes.cliente</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Crea tu primer cliente</p>
    </field>
    <field name="views" eval="[
        (ref('view_cliente_list'), 'list'),
        (ref('view_cliente_detail'), 'form'),
        (ref('view_cliente_form'), 'form')
    ]"/>
    </record>

    <!-- Menús -->
    <menuitem id="menu_root" name="Clientes" sequence="10"/>
    <menuitem id="menu_action" name="Catálogo de clientes" parent="menu_root" action="action_clientes"/>
</odoo>