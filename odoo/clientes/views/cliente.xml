    <record id="view_clientes_list" model="ir.ui.view">
        <field name="name">clientes.cliente.list</field>
        <field name="model">clientes.cliente</field>
        <field name="arch" type="xml">
            <list>
                <!-- Campos que quieres mostrar en la vista tabla -->
                <field name="nombre"/>
                <field name="rfc"/>
                <field name="tipo"/>
            </list>
        </field>
    </record>

    <record id="view_clientes_form" model="ir.ui.view">
        <field name="name">clientes.cliente.form</field>
        <field name="model">clientes.cliente</field>
        <field name="priority" eval="16"/>  
        <field name="arch" type="xml">
            <form edit = "0" create = "0">
                <header>
                    <!--button name="action_print" type="object" string="Imprimir" class="oe_highlight"/-->
                    <!--button name="unlink" string="Eliminar" type="object" class="oe_highlight"/-->
                    <button name="action_editar" string="Editar" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <!-- Campos del formulario detalle -->
                    <group>
                        <field name="nombre"/>
                        <field name="rfc"/>
                        <field name="tipo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_clientes_form_simple" model="ir.ui.view">
        <field name="name">clientes.cliente.form.simple</field>
        <field name="model">clientes.cliente</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Campos del formulario simple para creación -->
                    <group>
                        <field name="nombre"/>
                        <field name="rfc"/>
                        <field name="tipo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_clientes_form_edit" model="ir.ui.view">
        <field name="name">clientes.cliente.form.edit</field>
        <field name="model">clientes.cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="rfc"/>
                        <field name="tipo"/>
                    </group>
                    <notebook>
                        <page string="Contactos">
                            <field name="contacto"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Acción principal que muestra la vista tabla -->
    <record id="action_clientes_model" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">clientes.cliente</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_clientes_list"/>
    </record>

    <!-- Acción para el formulario de detalle -->
    <!--record id="action_clientes_model_detail" model="ir.actions.act_window">
