<odoo>
    <!-- Lista (editable) -->
    <!-- accesos/views/acceso.xml -->
    <record id="view_accesos_list" model="ir.ui.view">
        <field name="name">accesos.acceso.list</field>
        <field name="model">accesos.acceso</field>
        <field name="arch" type="xml">
            <list string="Accesos" editable="bottom">
                <field name="codigo" readonly="1"/>
                <field name="usuario_id" required="1"/>
                <field name="empresa_id" required="1"/>
                <field name="bodega_id" required="1"/>
                <field name="can_read"/>
                <field name="can_write"/>
                <field name="can_create"/>
                <field name="is_admin"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Formulario -->
    <record id="view_accesos_form" model="ir.ui.view">
        <field name="name">accesos.acceso.form</field>
        <field name="model">accesos.acceso</field>
        <field name="arch" type="xml">
            <form string="Acceso">
                <sheet>
                    <group>
                        <group>
                            <field name="codigo" readonly="1"/>
                            <field name="usuario_id" required="1"/>
                            <field name="empresa_id" required="1"/>
                            <field name="bodega_id" required="1"/>
                        </group>
                        <group string="Permisos">
                            <field name="can_read"/>
                            <field name="can_write"/>
                            <field name="can_create"/>
                            <field name="is_admin"/>
                        </group>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <!-- Acción -->
    <record id="action_accesos" model="ir.actions.act_window">
        <field name="name">Accesos</field>
        <field name="res_model">accesos.acceso</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <!-- Menú (puedes moverlo donde prefieras) -->
    <menuitem id="menu_accesos_root" name="Accesos"/>
    <menuitem id="menu_accesos" name="Gestión de Accesos" parent="menu_accesos_root" action="action_accesos"/>
</odoo>
