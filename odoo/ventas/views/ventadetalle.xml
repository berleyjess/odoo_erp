<odoo>
    <!-- Acción de Menú (DEBE IR PRIMERO) -->
    <record id="action_ventadetalles" model="ir.actions.act_window">
        <field name="name">ventadetalles</field>
        <field name="res_model">ventadetalle</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea tu primer ventadetalle</p>
        </field>
    </record>

    <!-- Vista árbol -->
    <record id="view_ventadetalle_list" model="ir.ui.view">
        <field name="name">ventadetalle.tree</field>
        <field name="model">ventadetalle</field>
        <field name="arch" type="xml">
            <list>
                <field name="producto"/>
                <field name="cantidad"/>
                <field name="precio"/>
                <field name="iva"/>
                <field name="ieps"/>
                <field name="importeb"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_ventadetalle_form" model="ir.ui.view">
        <field name="name">ventadetalle.form</field>
        <field name="model">ventadetalle</field>
        <field name="arch" type="xml">
            <form autosave="False">
                <sheet>
                    <group>
                    <field name="producto"/>
                    <field name="cantidad"/>
                    <field name="precio"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_root" name="ventadetalles" sequence="10"/>
    <menuitem id="menu_action" name="Catálogo de ventadetalles" parent="menu_root" action="action_ventadetalles"/>
</odoo>
