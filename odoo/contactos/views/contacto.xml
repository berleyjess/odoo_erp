<odoo>
    <!-- Acción de Menú (DEBE IR PRIMERO) -->
    <record id="action_contactos" model="ir.actions.act_window">
        <field name="name">contactos</field>
        <field name="res_model">contacto</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea tu primer contacto</p>
        </field>
    </record>

    <!-- Vista árbol -->
    <record id="view_contacto_list" model="ir.ui.view">
        <field name="name">contacto.tree</field>
        <field name="model">contacto</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="descripcion"/>
                <field name="telefono"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_contacto_form" model="ir.ui.view">
        <field name="name">contacto.form</field>
        <field name="model">contacto</field>
        <field name="arch" type="xml">
            <form autosave="False">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="descripcion"/>
                        <field name="telefono"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_root" name="contactos" sequence="10"/>
    <menuitem id="menu_action" name="Catálogo de contactos" parent="menu_root" action="action_contactos"/>
</odoo>
