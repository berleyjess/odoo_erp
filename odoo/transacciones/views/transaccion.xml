<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- ===================== SEARCH ===================== -->
    <record id="view_transacciones_transaccion_search" model="ir.ui.view">
      <field name="name">transacciones.transaccion.search</field>
      <field name="model">transacciones.transaccion</field>
      <field name="arch" type="xml">
        <search string="Buscar transacciones">
          <field name="referencia"/>
          <field name="producto_id"/>
          <field name="sucursal_id"/>
          <field name="sucursal_d_id" string="Destino"/>
          <field name="venta_id"/>
          <field name="fecha"/>
          <field name="tipo"/>
          <field name="stock" string="E/S"/>
        </search>
      </field>
    </record>

    <!-- ===================== LIST ===================== -->
    <record id="view_transacciones_transaccion_list" model="ir.ui.view">
      <field name="name">transacciones.transaccion.list</field>
      <field name="model">transacciones.transaccion</field>
      <field name="arch" type="xml">
        <list string="Transacciones" create="1" delete="1" editable="bottom" default_order="fecha desc">
          <field name="fecha"/>
          <field name="tipo"/>
          <field name="stock" string="E/S"/>
          <field name="sucursal_id" string="Origen"/>
          <!--field name="sucursal_d_id" string="Destino" invisible="[('tipo','not in',['2','3'])]"/-->
          <field name="venta_id"/>
          <field name="producto_id"/>
          <field name="referencia"/>
          <field name="cantidad" sum="Cantidad total"/>
          <field name="precio"/>
          <!--field name="iva"  widget="percentage" string="IVA %"  invisible="[('iva','=',0)]"/>
          <field name="ieps" widget="percentage" string="IEPS %" invisible="[('ieps','=',0)]"/-->
          <field name="subtotal" sum="Subtotal"/>
          <!--field name="iva_amount"  string="IVA"  invisible="[('iva','=',0)]"  sum="IVA total"/>
          <field name="ieps_amount" string="IEPS" invisible="[('ieps','=',0)]" sum="IEPS total"/-->
          <field name="importe" sum="Importe total"/>
        </list>
      </field>
    </record>

    <!-- ===================== FORM ===================== -->
    <record id="view_transacciones_transaccion_form" model="ir.ui.view">
      <field name="name">transacciones.transaccion.form</field>
      <field name="model">transacciones.transaccion</field>
      <field name="arch" type="xml">
        <form string="Transacción">
          <sheet>
            <group>
              <group>
                <field name="fecha"/>
                <field name="tipo"/>
                <field name="stock" string="E/S"/>
                <field name="venta_id"/>
                <field name="referencia"/>
              </group>
              <group>
                <field name="sucursal_id" string="Origen"/>
                <field name="sucursal_d_id" string="Destino" invisible="[('tipo','not in',['2','3'])]"/>
                <field name="producto_id"/>
                <field name="cantidad"/>
                <field name="precio"/>
              </group>
            </group>

            <group string="Impuestos e importes">
              <group>
                <field name="iva"  widget="percentage" string="IVA %"  invisible="[('iva','=',0)]"/>
                <field name="iva_amount"  string="IVA"  invisible="[('iva','=',0)]"/>
                <field name="ieps" widget="percentage" string="IEPS %" invisible="[('ieps','=',0)]"/>
                <field name="ieps_amount" string="IEPS" invisible="[('ieps','=',0)]"/>
              </group>
              <group>
                <field name="subtotal"/>
                <field name="importe"/>
              </group>
            </group>

            <notebook>
              <page string="Técnico">
                <group>
                  <field name="empresa_id_helper"/>
                  <field name="cliente_rfc_helper"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- ===================== ACTION ===================== -->
    <record id="action_transacciones_transaccion" model="ir.actions.act_window">
      <field name="name">Transacciones</field>
      <field name="res_model">transacciones.transaccion</field>
      <field name="view_mode">list,form</field>
      <field name="search_view_id" ref="view_transacciones_transaccion_search"/>
    </record>


    <menuitem id="menu_transacciones_root" name="Transacciones"/>
    <menuitem id="menu_transacciones_items" name="Movimientos"
              parent="menu_transacciones_root"
              action="action_transacciones_transaccion"/>
    
  </data>
</odoo>
