<odoo>
    <!-- Acción de Menú (DEBE IR PRIMERO) -->
    <record id="action_autorizacion" model="ir.actions.act_window">
        <field name="name">Autorizaciones de Crédito</field>
        <field name="res_model">solcreditoautorizaciones.autorizacion</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Autorización de Crédito</p>
        </field>
    </record>

    <!-- Vista árbol -->
    <record id="view_autorizacion_list" model="ir.ui.view">
        <field name="name">autorizacion.list</field>
        <field name="model">solcreditoautorizaciones.autorizacion</field>
        <field name="arch" type="xml">
            <list>
                <field name="status"/>
                <field name="descripcion"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_autorizacion_form" model="ir.ui.view">
        <field name="name">autorizacion.form</field>
        <field name="model">solcreditoautorizaciones.autorizacion</field>
        <field name="arch" type="xml">
            <form autosave="False">
                <sheet>
                    <group>
                        <field name="status" widget="toggle" options='{"active": "0", "inactive": "1"}'/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menús -->
    <menuitem id="menu_root" name="Autorizacion de Contratos" sequence="10"/>
    <menuitem id="menu_action" name="Autorizaciones" parent="menu_root" action="action_autorizacion"/>
</odoo>
