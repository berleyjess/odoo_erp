<?xml version="1.0" encoding="UTF-8"?>
<!--pruebas/reports/report_templates.xml -->
<odoo>
    <!-- ================== TEMPLATE DEL REPORTE ================== -->
    <template id="report_persona_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="persona">
                <div class="page">
                    <h2>Persona: <t t-esc="persona.nombre"/>
                    </h2>
                    <p>
                        <strong>Correo:</strong>
                        <t t-esc="persona.correo"/>
                    </p>
                    <p>
                        <strong>Género:</strong>
                        <t t-esc="persona.genero"/>
                    </p>
                    <p>
                        <strong>Salario:</strong>
                        <t t-esc="persona.salario"/>
                    </p>
                    <p>
                        <strong>Fecha de nacimiento:</strong>
                        <t t-esc="persona.fecha_nacimiento"/>
                    </p>
                    <p>
                        <strong>Edad:</strong>
                        <t t-esc="persona.edad"/>
                    </p>
                    <p>
                        <strong>Activo:</strong>
                        <t t-esc="persona.activo and 'Sí' or 'No'"/>
                    </p>
                </div>
            </t>
        </t>
    </template>
</odoo>