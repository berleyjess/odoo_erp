<odoo>
  <!-- Reglas actuales (bien) -->
  <!-- usuarios/views/record_rules.xml -->
  <record id="rule_empresas_por_usuario" model="ir.rule">
    <field name="name">Empresas permitidas por usuario</field>
    <field name="model_id" ref="empresas.model_empresas_empresa"/>
    <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    <field name="domain_force">[('id','in', user.empresas_ids.ids)]</field>
  </record>

  <record id="rule_sucursales_por_usuario" model="ir.rule">
    <field name="name">Sucursales permitidas por usuario</field>
    <field name="model_id" ref="sucursales.model_sucursales_sucursal"/>
    <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    <field name="domain_force">[('empresa','in', user.empresas_ids.ids)]</field>
  </record>


  <!-- Bypass para Administrador -->
  <record id="rule_empresas_admin_all" model="ir.rule">
    <field name="name">Empresas (admin sin restricción)</field>
    <field name="model_id" ref="empresas.model_empresas_empresa"/>
    <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    <field name="domain_force">[(1,'=',1)]</field>
  </record>

  <record id="rule_sucursales_admin_all" model="ir.rule">
    <field name="name">Sucursales (admin sin restricción)</field>
    <field name="model_id" ref="sucursales.model_sucursales_sucursal"/>
    <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    <field name="domain_force">[(1,'=',1)]</field>
  </record>
</odoo>
