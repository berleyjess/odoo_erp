<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="personas_view_role_promote_wizard_form" model="ir.ui.view">
      <field name="name">persona.role.promote.wizard.form</field>
      <field name="model">persona.role.promote.wizard</field>
      <field name="arch" type="xml">
        <form string="Promover a Rol">
          <group>
            <field name="rol" required="1"/>
            <field name="nombre"/>
            <field name="rfc"/>
            <field name="curp"/>
            <field name="numero_social"/>
            <field name="persona_id" readonly="1"/>
          </group>
          <footer>
            <button string="Aplicar" type="object" name="action_apply" class="btn-primary"/>
            <button string="Cancelar" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="personas_action_promover_rol" model="ir.actions.act_window">
      <field name="name">Promover a Rol</field>
      <field name="res_model">persona.role.promote.wizard</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="personas_view_role_promote_wizard_form"/>
      <field name="target">new</field>
    </record>

    <menuitem id="personas_menu_promover_rol"
              name="Promover a rol"
              parent="personas_menu_root"
              action="personas_action_promover_rol"
              sequence="90"/>
  </data>
</odoo>
