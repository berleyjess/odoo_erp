<odoo>
  <!-- personas/views/roles -->
  <!-- Clientes -->
  <record id="action_clientes" model="ir.actions.act_window">
    <field name="name">Clientes</field>
    <field name="res_model">persona.cliente</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_clientes" name="Clientes" parent="menu_personas_root" action="action_clientes"/>

  <record id="view_cliente_form" model="ir.ui.view">
    <field name="name">persona.cliente.form</field>
    <field name="model">persona.cliente</field>
    <field name="arch" type="xml">
      <form string="Cliente">
        <sheet>
          <group string="Identidad">
            <field name="name" required="1"/>
            <field name="rfc"/>
            <field name="email"/>
            <field name="telefono"/>
            <field name="fecha_nacimiento"/>
          </group>

          <group string="Ubicación" colspan="4">
            <group>
              <field name="localidad_id"/>
              <field name="colonia"/>
              <field name="numero_casa"/>
            </group>
          </group>

          <group string="Estado">
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

